NAME=MyAweSomePhoneBook
CC=c++
CPPFLAGS= -Wall -Wextra -Werror -std=c++98

# SRCS=
SRCS = ./src/PhoneBook.cpp \
		./src/Contact.cpp \
		./src/main.cpp

OBJS=$(SRCS:.cpp=.o)

./src/%.o: %.cpp
	@$(CC) $(CPPFLAGS) -c $< -o $@
	@printf "\033[32m[âœ”] %s\n\033[0m" "$<"

all: ${NAME}

${NAME}: ${OBJS}
	$(CC) $(CPPFLAGS) ${OBJS} -o ${NAME}

clean:
	rm -f ${OBJS}